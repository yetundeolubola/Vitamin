<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">


        <ImageView
            android:id="@+id/img_vitamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/vitamins" />



        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_vitamin"
            android:paddingTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="@string/about_vitamin"
            android:textSize="17sp" />
        <Button
            android:id="@+id/vitamininfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="More On Vitamin"
            android:textAllCaps="false"
            android:background="@drawable/edt_circle"
            android:textSize="20sp" />


</RelativeLayout>